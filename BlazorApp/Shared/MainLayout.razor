@inherits LayoutComponentBase
@inject BlazorApp.Objects.SessionState state
@inject NavigationManager NavigationManager

<div class="main">
    <div class="top-row px-4">
        <div class="col align-content-strt">
            ERP
        </div>
        <div class="align-content-end">
            <a href="/Login">@login</a>
        </div>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>

@code
{
    private string login { get; set; } = "로그인";
    protected override void OnInitialized()
    {
        if (state.LoingSession == string.Empty
            && !NavigationManager.Uri.EndsWith("/Login")
            && !NavigationManager.Uri.EndsWith("/Join"))
        {
            login = "로그인";
            //NavigationManager.NavigateTo("/Login");
        }
        else
        {
            login = state.LoingSession;
        }
    }
}