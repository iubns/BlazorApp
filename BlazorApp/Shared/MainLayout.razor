@inherits LayoutComponentBase
@inject BlazorApp.Objects.SessionState state

<div class="main">
    <div class="top-row px-4">
        <div class="col align-content-strt">
            ERP
        </div>
        <div class="align-content-end">
            <a href="/Login">@login</a>
        </div>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>

@code
{
    private string login { get; set; } = "로그인";
    private void run()
    {
        if (state.LoingSession == string.Empty)
        {
            login = "로그인";
        }
        else
        {
            login = "이미 로그인 되어 있음";
        }

    }
}